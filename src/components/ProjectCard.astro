---
import type { Project } from '../data/projects';
const { project }:{ project: Project } = Astro.props;

// tom visual (fallback por tipo)
const tone = project.tone ?? (project.type === 'work' ? 'red' : 'green');

const toneMap: Record<string, { card: string; badge: string; chip: string; cta: string; icon: string; year: string }> = {
  red: {
    card:  'from-red-500/20 via-red-500/10 to-red-500/0 ring-1 ring-inset ring-red-400/35 shadow-[0_22px_60px_-28px_rgba(239,68,68,0.65)]',
    badge: 'bg-red-500/20 text-red-50 ring-1 ring-inset ring-red-400/45',
    chip:  'border-red-400/30 text-red-100 bg-red-500/10',
    cta:   'text-red-100 group-hover:text-red-50',
    icon:  'text-red-100/80 group-hover:text-red-50',
    year:  'bg-red-500/10 text-red-100 border-red-400/40',
  },
  green: {
    card:  'from-emerald-500/18 via-emerald-500/8 to-emerald-500/0 ring-1 ring-inset ring-emerald-400/35 shadow-[0_22px_60px_-28px_rgba(16,185,129,0.60)]',
    badge: 'bg-emerald-500/20 text-emerald-50 ring-1 ring-inset ring-emerald-400/40',
    chip:  'border-emerald-400/30 text-emerald-100 bg-emerald-500/10',
    cta:   'text-emerald-100 group-hover:text-emerald-50',
    icon:  'text-emerald-100/80 group-hover:text-emerald-50',
    year:  'bg-emerald-500/10 text-emerald-100 border-emerald-400/40',
  },
  violet: {
    card:  'from-violet-500/20 via-violet-500/8 to-violet-500/0 ring-1 ring-inset ring-violet-400/35 shadow-[0_22px_60px_-28px_rgba(139,92,246,0.60)]',
    badge: 'bg-violet-500/20 text-violet-50 ring-1 ring-inset ring-violet-400/40',
    chip:  'border-violet-400/30 text-violet-100 bg-violet-500/10',
    cta:   'text-violet-100 group-hover:text-violet-50',
    icon:  'text-violet-100/80 group-hover:text-violet-50',
    year:  'bg-violet-500/10 text-violet-100 border-violet-400/40',
  },
  amber: {
    card:  'from-amber-400/20 via-amber-400/8 to-amber-400/0 ring-1 ring-inset ring-amber-400/40 shadow-[0_22px_60px_-28px_rgba(245,158,11,0.55)]',
    badge: 'bg-amber-400/20 text-amber-50 ring-1 ring-inset ring-amber-400/40',
    chip:  'border-amber-400/30 text-amber-100 bg-amber-400/10',
    cta:   'text-amber-100 group-hover:text-amber-50',
    icon:  'text-amber-100/80 group-hover:text-amber-50',
    year:  'bg-amber-400/10 text-amber-100 border-amber-400/40',
  },
  cyan: {
    card:  'from-cyan-500/20 via-cyan-500/8 to-cyan-500/0 ring-1 ring-inset ring-cyan-400/40 shadow-[0_22px_60px_-28px_rgba(6,182,212,0.55)]',
    badge: 'bg-cyan-500/20 text-cyan-50 ring-1 ring-inset ring-cyan-400/45',
    chip:  'border-cyan-400/30 text-cyan-100 bg-cyan-500/10',
    cta:   'text-cyan-100 group-hover:text-cyan-50',
    icon:  'text-cyan-100/80 group-hover:text-cyan-50',
    year:  'bg-cyan-500/10 text-cyan-100 border-cyan-400/40',
  },
};

const toneCfg = toneMap[tone] ?? toneMap.green;
const href = `/projects/${project.slug}`;
const badgeLabel = project.type === 'work' ? 'Trabalho' : 'Projeto pessoal';
const stackVisible = project.stack.slice(0, 4);
const extraStack = project.stack.length - stackVisible.length;
const thumbLetter = project.title.charAt(0).toUpperCase();
const typeLabel = project.type === 'work' ? 'Trabalho' : 'Pessoal';
---

<a
  href={href}
  class={`project-card group relative block h-full min-h-[260px] overflow-hidden rounded-2xl border border-white/12 bg-gradient-to-b ${toneCfg.card} transition duration-300 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white/40`}
>
  <div class="project-card__body relative z-10 flex h-full flex-col gap-6 px-5 pb-5 pt-6">
    <div class="flex items-start justify-between gap-3">
      <div class="flex items-center gap-3">
        <span class="project-card__thumb inline-flex h-9 w-9 items-center justify-center rounded-full border border-white/10 bg-white/5 text-sm font-semibold text-white/80">
          {thumbLetter}
        </span>
        <div class="flex flex-col">
          <span class={`inline-flex items-center gap-1 rounded-full px-3 py-1 text-[11px] font-semibold uppercase tracking-[0.12em] text-white/90 transition ${toneCfg.badge}`}>
            {badgeLabel}
          </span>
          <span class="mt-1 text-[11px] uppercase tracking-[0.2em] text-white/40">{typeLabel}</span>
        </div>
      </div>
      <div class="flex flex-col items-end gap-2 text-right">
        <span class={`inline-flex items-center gap-1 rounded-full border px-2 py-0.5 text-[11px] font-semibold uppercase tracking-[0.18em] ${toneCfg.year}`}>
          {project.year}
        </span>
        <svg
          class={`h-4 w-4 transition duration-300 ${toneCfg.icon}`}
          viewBox="0 0 24 24"
          stroke="currentColor"
          fill="none"
          stroke-width="1.5"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M8.75 5.75h9.5v9.5M5.75 18.25l12.06-12.06" />
        </svg>
      </div>
    </div>

    <div class="space-y-3">
      <h3 class="text-lg font-semibold leading-tight text-white">{project.title}</h3>
      <p class="line-clamp-3 text-sm leading-relaxed text-slate-200/85">{project.summary}</p>
    </div>

    <div class="mt-auto flex flex-col gap-4">
      <div class="flex flex-wrap gap-2 text-xs">
        {stackVisible.map((tech) => (
          <span class={`inline-flex items-center gap-1 rounded-full border px-2.5 py-1 font-medium transition ${toneCfg.chip}`}>
            {tech}
          </span>
        ))}
        {extraStack > 0 && (
          <span class="inline-flex items-center gap-1 rounded-full border border-white/15 bg-white/10 px-2.5 py-1 font-medium text-white/70">
            +{extraStack}
          </span>
        )}
      </div>
      <span class={`project-card__cta inline-flex items-center gap-2 text-sm font-semibold tracking-tight transition duration-300 ${toneCfg.cta}`}>
        Abrir case
        <svg class="h-4 w-4 transition-transform duration-300 group-hover:translate-x-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M7 12h10m0 0-4-4m4 4-4 4" />
        </svg>
      </span>
    </div>
  </div>

  <span aria-hidden class="project-card__glow pointer-events-none absolute inset-x-0 top-0 h-20 opacity-80"></span>
</a>
